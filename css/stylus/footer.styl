// footer.styl: Footer

footer
  background-color hsl(0, 0%, 18%)
  color hsl(0, 0%, 60%)
  text-align center
  padding 3rem 0
  margin-top 3rem

  a
    color hsl(0, 0%, 90%)
    border-bottom 1px solid hsl(0, 0%, 90%)
    transition .15s

    &:hover,
    &:focus
      color hsl(0, 0%, 70%)
      border-bottom 1px solid hsl(0, 0%, 70%)
      text-decoration none

    &:active
      color hsl(0, 0%, 50%)
      border-bottom 1px solid hsl(0, 0%, 50%)
